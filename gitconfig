[user]
	name = Daniel Hahler
	email = git@thequod.de
[alias]
	a = add
	ae = add -e
	alias = !git config --get-regexp '^alias\\.' | sed -e 's/^alias\\.//' -e 's/ /	/'
	c = commit -v
	ci = commit -v
	ca = commit -v -a
	co = checkout
	cob = checkout -b
	com = checkout master
	cp = cherry-pick
	b = branch
	ba = branch -a
	count = shortlog -sn
	d = diff
	dc = diff --cached
	dv = !git diff -w "$@" | vim -R -
	f = fetch
	ll = log --pretty=format:'%C(yellow bold)commit %H%Creset %C(yellow)tree %T%Creset%nAuthor: %an <%ae>%nDate:   %ad%n%n%w(76,4,4)%s%n%n%-b%n' --graph --decorate --submodule=log
	l = log --abbrev-commit --graph --decorate --submodule=log
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	s = status
	sm = submodule
	st = status
	g = log -p
	p = push
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
	up = !git fetch && git rebase
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[color "diff"]
	whitespace = red reverse
[core]
	excludesfile = ~/.gitignore.global
	editor = vim
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
[diff]
	tool = bc3
	mnemonicprefix = true
[difftool "bc3"]
	cmd = bcompare $LOCAL $REMOTE
[difftool]
	prompt = false
[merge]
	tool = bc3
	stat = true
[mergetool "bc3"]
	cmd = bcompare $LOCAL $REMOTE $BASE $MERGED
	trustExitCode = true
[merge "dpkg-mergechangelogs"]
	name = debian/changelog merge driver
	driver = dpkg-mergechangelogs -m %O %A %B %A
[format]
#	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset

[push]
	default = matching
[interactive]
	singlekey = true

[url "git@github.com:"]
	insteadOf = github:
[url "git://github.com/"]
	insteadOf = gitpub:

[github]
	user = blueyed

