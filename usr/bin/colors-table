#!/usr/bin/zsh
# Display all available color combinations
# (bold/non-bold foreground on backgrounds)

autoload -U colors && colors

local -a bgs
if [[ $1 != "" ]]; then
	bgs=($1)
else
	bgs=(${(k)bg})
fi

for b in $bgs; do
	if (( $#bgs > 1 )); then
		echo "bg: $b"
	fi
	for c in ${(k)fg}; do
		print -nP %{${bg_no_bold[$b]}%}
		print -nP %{${fg_no_bold[$c]}%} ${(l.$((COLUMNS/2-1)).)c}
		print -nP %{${fg_bold[$c]}%}    ${(r.$((COLUMNS/2-1)).)c}
		print -P %{${reset_color}%}
	done
done
