[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	a = add
	ae = add -e
	alias = "!git config --get-regexp '^alias\\.' | sed -e 's/^alias\\.//' -e 's/ /	/'"
	c = commit -v
	ci = commit -v
	ca = commit -v -a
	co = checkout
	cob = checkout -b
	com = checkout master
	cp = cherry-pick
	b = branch
	ba = branch -a
	count = shortlog -sn
	d = diff
	dc = diff --cached
	dv = '!git diff -w "$@" | vim -R -'
	f = fetch
	l = log --pretty=format:'%C(yellow bold)commit %H%Creset %C(yellow)tree %T%Creset%nAuthor: %an <%%ae>%nDate:   %ad%n%n%w(76,4,4)%s%n%n%-b%n'
	rbi = rebase -i
	s = status
	st = status
	g = log -p
	p = push
	up = "!git fetch && git rebase"
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[color "diff"]
	whitespace = red reverse
[core]
	excludesfile = ~/.gitignore
	editor = vim
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
[format]
#	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset

[push]
	default = matching
[interactive]
	singlekey = true

[url "git@github.com:"]
	insteadOf = github:
[url "git://github.com/"]
	insteadOf = gitpub:

[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
